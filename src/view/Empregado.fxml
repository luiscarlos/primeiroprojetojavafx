<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>

<AnchorPane prefHeight="467.0" prefWidth="452.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.EmpregadoController">
   <children>
      <Label layoutX="200.0" layoutY="50.0" text="Empregado" />
      <Label layoutX="100.0" layoutY="239.0" text="Resultado:" />
      <Label fx:id="lblResultado" layoutX="200.0" layoutY="239.0" prefHeight="17.0" prefWidth="217.0" />
      <GridPane hgap="5.0" layoutX="100.0" layoutY="100.0" prefHeight="85.0" prefWidth="255.0">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" maxWidth="124.0" minWidth="10.0" prefWidth="124.0" />
          <ColumnConstraints hgrow="SOMETIMES" maxWidth="159.0" minWidth="10.0" prefWidth="126.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Label text="Nome:" />
            <TextField fx:id="txtNome" onKeyReleased="#onKeyReleased" promptText="Nome completo" GridPane.columnIndex="1" />
            <Label text="Salário por hora" GridPane.rowIndex="1" />
            <TextField fx:id="txtSalHora" onKeyReleased="#onKeyReleased" promptText="Salario por hora" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <Label text="Horas trabalhadas" GridPane.rowIndex="2" />
            <TextField fx:id="txtHorasTrabalhada" onKeyReleased="#onKeyReleased" promptText="Horas trabalhadas" GridPane.columnIndex="1" GridPane.rowIndex="2" />
         </children>
      </GridPane>
      <HBox layoutX="110.0" layoutY="200.0" prefHeight="39.0" prefWidth="229.0" spacing="5.0" AnchorPane.topAnchor="200.0">
         <children>
            <Label text="Turno:" />
            <RadioButton fx:id="rdoManha" mnemonicParsing="false" selected="true" text="Manhã">
               <toggleGroup>
                  <ToggleGroup fx:id="turno" />
               </toggleGroup>
            </RadioButton>
            <RadioButton fx:id="rdoTarde" mnemonicParsing="false" text="Tarde" toggleGroup="$turno" />
            <RadioButton fx:id="rdoNoite" mnemonicParsing="false" text="Noite" toggleGroup="$turno" />
         </children>
         <padding>
            <Insets top="5.0" />
         </padding>
      </HBox>
      <HBox layoutX="125.0" layoutY="333.0" prefHeight="39.0" prefWidth="200.0" spacing="80.0">
         <children>
            <Button fx:id="btnCalcular" disable="true" mnemonicParsing="false" onAction="#onCalcularClick" text="Calcular" />
            <Button fx:id="btnLimpar" disable="true" mnemonicParsing="false" onAction="#onBtnLimparClick" text="Limpar" />
         </children>
      </HBox>
      <Label layoutX="100.0" layoutY="278.0" text="Resultado:" />
      <ComboBox fx:id="cboCargo" layoutX="205.0" layoutY="274.0" prefWidth="150.0" />
   </children>
</AnchorPane>
